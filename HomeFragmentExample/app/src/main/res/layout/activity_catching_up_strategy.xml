<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activity.CatchingUpStrategyActivity">

    <EditText
        android:id="@+id/card_strategy_name2"

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="-8dp"
        android:layout_marginBottom="70dp"
        android:background="#19A0DF"
        android:ems="10"
        android:fontFamily="serif"
        android:inputType="textPersonName"
        android:rotationX="0"
        android:scrollbars="vertical"
        android:text="Catching up strategy"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:visibility="visible"

        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/card_image2"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="190dp"
        android:layout_below="@+id/card_strategy_name2"

        android:layout_marginTop="-75dp"
        app:srcCompat="@drawable/strategy_two" />

    <TextView
        android:id="@+id/description2"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:layout_below="@+id/card_image2"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="-4sp"
        android:layout_marginRight="5sp"

        android:background="@color/white"
        android:justificationMode="inter_word"
        android:scrollbars="vertical"
        android:text="@string/catching_up_strategy"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <Button
        android:id="@+id/favBtn2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/description2"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center|end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_favorite_shadow_24dp" />

</RelativeLayout>